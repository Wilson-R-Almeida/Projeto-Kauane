@model CeuDeGraos.Models.ResetPasswordViewModel

<@{
    ViewData["Title"] = "Nova Senha";
} <div style="gap: 15px;"
    class="d-flex flex-column pdt-50  align-items-center background-body" style="height: 730px;">
    <div class="container d-flex justify-content-center align-items-center">
        <div style="width: 800px; height: 600px; border-radius: 10px;"
            class="login d-flex flex-column background-content p-5 justify-content-center align-items-center">
            <h1 style="color: var(--secondary-color);" class="font-arial">Redefinir Senha</h1>

            <form id="clientForm" method="post"
                class="d-flex flex-column full-width justify-content-center align-items-center gap-5 pdt-30">
                <input type="hidden" asp-for="Token" />
                <input type="hidden" asp-for="Email" />
                <input placeholder="Senha" type="password" class="full-width" maxlength="14" name="password"
                    asp-for="Password">
                <input placeholder="Repita a senha" type="password" class="full-width" maxlength="14"
                    name="confirmPassword">
                <button style="height: 50px; width: 300px; border-radius: 40px;"
                    class="button-secondary-color-white font-arial mt-3" asp-controller="RecuperacaoSenha"
                    asp-action="EnvioFormularioNovaSenha">Enviar</button>
                <a class="font-arial" asp-controller="Home" asp-action="Connected">Acessar conta</a>
            </form>
        </div>
    </div>
    </div>
    <script>
    </script>
